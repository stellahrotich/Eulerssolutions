#include <iostream>

int main(int argc, const char * argv[]) {
    
    int a = 0;
    int b = 1;
    
    int fib = 0;
    int count = 0;
    
    while(a<4000000){
        fib = a +b;
        a = b;
        b= fib;
        
        if(fib%2==0){
            count += fib;
        }
        
    }
    
    
    
    std::cout << count;
    return 0;
}
